{
  "manifest_version": 3,
  "name": "CopyToTXT",
  "version": "2.1.0",
  "description": "Save selected text snippets as files you can quickly copy or download in multiple text formats (.txt, .csv, .xml, etc.).",
  "permissions": [
    "contextMenus",
    "storage",
    "downloads",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CopyToTXT"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}